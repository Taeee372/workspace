<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.example.green.backend_car.sales.mapper.SalesMapper">
	<resultMap id="sale" type="com.example.green.backend_car.sales.dto.SalesDTO">
        <id     column="SALES_NUM"      property="salesNum" />
        <result column="BUYER_NAME"     property="buyerName" />
        <result column="BUYER_TEL"      property="buyerTel" />
        <result column="COLOR"          property="color" />
        <result column="SALE_DATE"      property="saleDate" />
        <result column="MODEL_NUM"      property="modelNum" />
        <association property="carDTO" resultMap="com.example.green.backend_car.car.mapper.CarMapper.car" />
    </resultMap>

    <!--판매 정보 등록-->
    <insert id="regSaleInfo">
        INSERT INTO SALES_INFO (
            BUYER_NAME
            , COLOR
            , MODEL_NUM
            , BUYER_TEL
        ) VALUES (
            #{buyerName}
            , #{color}
            , #{modelNum}
            , #{buyerTel}
        )
    </insert>

    <!--판매 목록 조회-->
    <select id="getSaleList" resultMap="sale">
        SELECT SALES_NUM
            , BUYER_NAME
            , CASE
                WHEN BUYER_TEL = '' OR BUYER_TEL IS NULL THEN '-'
                ELSE BUYER_TEL
                END BUYER_TEL
            , SALE_DATE
            , COLOR
            , MODEL_NAME
            , PRICE
        FROM sales_info S INNER JOIN car_info C
        ON S.MODEL_NUM = C.MODEL_NUM
        ORDER BY SALE_DATE DESC
    </select>
</mapper>































