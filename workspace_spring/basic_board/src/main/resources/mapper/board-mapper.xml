<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<!-- namespace에는 xml파일과 연결할 Mapper interface 파일명을 패키지를 포함하여 적어주세요 -->
<mapper namespace="com.green.basic_board.mapper.BoardMapper">
	<!-- 모든 게시글 조회 쿼리 -->
    <!-- 여기서는 *로 퉁치는 게 아니라 조회할 컬럼명을 모두 적어주는 게 좋음 -->
    <select id="getBoardList">
        SELECT
            BOARD_NUM
            , TITLE
            , WRITER
            , CONTENT
            , READ_CNT
            , CREATE_DATE
        FROM BASIC_BOARD
    </select>

	<!-- 하나의 게시글의 모든 컬럼을 조회하는 쿼리 -->
    <select id="getBoard">
        SELECT
            BOARD_NUM
            , TITLE
            , WRITER
            , CONTENT
            , READ_CNT
            , CREATE_DATE
        FROM BASIC_BOARD
        WHERE BOARD_NUM = 1
    </select>

	<!-- 하나의 게시글을 등록하는 쿼리 -->
    <insert id="insertBoard">
        INSERT INTO BASIC_BOARD (
            TITLE
            , WRITER
            , CONTENT
        ) VALUES (
            '제목4'
            , '작성자4'
            , '내용4'
        )
    </insert>

	<!-- 하나의 게시글을 삭제하는 쿼리 -->
    <delete id="deleteBoard">
        DELETE FROM BASIC_BOARD
        WHERE BOARD_NUM = 1
    </delete>

    <!-- 하나의 게시글의 제목과 내용을 수정하는 쿼리 -->
	<!-- 글번호가 2번인 게시글의 제목을 'java', 내용을 '수정된 내용'으로 수정하는 쿼리 -->
    <update id="updateBoard">
        UPDATE BASIC_BOARD
        SET
            TITLE = 'java'
            , CONTENT = '수정된 내용'
        WHERE BOARD_NUM = 2;
    </update>


</mapper>

<!--
1. Spring 프로젝트 생성 + 세팅
2. 테이블 생성
3. 테이블과 데이터 전송을 위한 DTO 클래스 생성
4. mapper.xml 파일에서 실행할 쿼리 작성
5. Mapper 인터페이스에 쿼리를 실행할 추상 메서드 작성
6. Service 클래스에 핵심기능(쿼리 실행 메서드) 구현
7. Service 클래스에서 구현한 메서드를 Controller에서 사용
-->






























